<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1 class="display-4">Welcome to YelpCamp!</h1>
        <p class="lead">View our hand-picked campgrounds from all over the world</p>
        <hr class="my-4">
        <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add New Campground</a>
    </header>
    <div class="row">
        <% campgrounds.forEach(function(campground){%>
        <div class="d-flex justify-content-center col-xl-3 col-lg-4 col-sm-6 mb-4">
            <div class="card mx-2" style="width: 16rem;">
                <img class="card-img-top" src="<%=campground.image%>" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.name; %>
                    </h5>
                    <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info</a>
                </div>
            </div>
        </div>
        <%});%>
    </div>
    <a class="btn btn-primary btn-lg mb-4 px-5 ml-5"href="/">Back</a>
</div>

<% include ../partials/footer %>