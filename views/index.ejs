<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1 class="display-4">Bienvenido a la Pagina de Datos</h1>
        <p class="lead">Aquí podras consultar los datos de las partidas jugadas.</p>
        <hr class="my-4">
    </header>
    <div class="row">
        <% partidas.forEach(function(partida){%>
        <div class="d-flex justify-content-center col-xl-3 col-lg-4 col-sm-6 mb-4">
            <div class="card mx-2" style="width: 16rem;">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= partida._id; %>
                    </h5>
                    <a href="" class="btn btn-primary">Más Información</a>
                </div>
            </div>
        </div>
        <%});%>
    </div>
    <a class="btn btn-primary btn-lg mb-4 px-5 ml-5"href="/">Volver</a>
</div>

<% include ../partials/footer %>